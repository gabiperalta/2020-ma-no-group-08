<body>


<main role="main" class="container" >

    <div class="form-group">
        <div class="row">
            <select id="selectCategorias" class="custom-select" name="categoria-elegida" style="max-width: 300px">
                <option selected>Seleccione una categoria</option>
                {{#each criteriosDeCategorizacion}}
                    {{#each this.categorias}}
                        <option value="{{../nombre}}_{{nombre}}"> {{../nombre}}-{{nombre}} </option>
                    {{/each}}
                {{/each}}
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
            <div class="mx-3">
                <button type="button" class="btn btn-primary px-3 rounded" onclick="obtenerCategoria()">Filtrar</button>
            </div>
        </div>
    </div>

    <div id="accordion">

        {{#each presupuestos}}
            <div class="card">
                <div class="card-header" id="headingPresupuesto{{identificador}}">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-target="#collapsePresupuesto{{identificador}}" data-toggle="collapse" aria-expanded="false" aria-controls="collapsePresupuesto{{identificador}}">
                            Presupuesto {{ identificador}}
                        </button>
                    </h5>
                </div>

                <div id="collapsePresupuesto{{identificador}}" class="collapse" aria-labelledby="headingPresupuesto{{identificador}}" data-parent="#accordion">
                    <div class="container">
                        <div class="row">

                            <div class="card-body col-10">
                                Items:
                                <ul>
                                    {{#each this.items}}
                                        <li>{{ descripcion }} - ${{valor}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="col my-auto">
                               <form action="/categorizar?id-entidad-categorizable={{identificador}}/" method="GET">
                                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Categorizar</button>
                               </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="mt-5">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">

                {{#if pagina_anterior}}
                    <li class="page-item">
                {{else}}
                    <li class="page-item disabled">
                {{/if}}
                    <a class="page-link" href="/presupuestos?pagina={{pagina_anterior}}{{filtroPaginado}}" tabindex="-1">Anterior</a>
                </li>

                {{#each cantidad_paginas}}
                    <li class="page-item"><a class="page-link" href="/presupuestos?pagina={{this}}{{filtroPaginado}}">{{this}}</a></li>
                {{/each}}

                {{#if pagina_siguiente}}
                    <li class="page-item">
                {{else}}
                    <li class="page-item disabled">
                {{/if}}
                    <a class="page-link" href="/presupuestos?pagina={{pagina_siguiente}}{{filtroPaginado}}">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>

